extends layout

block head
  link(rel='stylesheet', href='/assets/semantic/semantic.min.css')
  script(src='/assets/semantic/semantic.min.js')
  script(src='/assets/angular/angular.min.js')
  script(src='/assets/app/main.js')

block content
  div(ng-app='odinApp')
    div(ng-controller='ItemsController')
      div(class='ui segment')
        div(class='ui action input')
          input(type='text' placeholder='Title...' ng-model='item.title')
          div(class='ui primary button' ng-click='addItem(item.title); item.title=""')
            i(class='plus icon')
            | Add

      div(class='ui basic segment')
        div(class='ui card' ng-repeat='item in items')
          div(class='content')
            div(class='header') {{ item.title }}
