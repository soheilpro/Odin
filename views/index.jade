extends layout

block head
  script(src='/assets/angular/angular.min.js')
  script(src='/assets/app/main.js')
  link(rel='stylesheet', href='/assets/app/style.css')

block content
  div(ng-app='odinApp')
    div(ng-controller='ItemsController')
      div(class='new')
        input(ng-model='item.title')
        button(ng-click='addItem(item.title); item.title=""') Add

      div(class='items')
        ul(ng-repeat='item in items')
          li {{ item.title }}
