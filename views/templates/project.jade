include menu
include filters
include itemCard

div
  div.ui.segment
    +menu('Projects')

  div.ui.basic.segment
    div.ui.grid
      div.four.wide.column
          h1.ui.header
            | {{ project.name }}
      div.twelve.wide.right.aligned.column
        +filters({ showSearchFilter: true, showProjectFilter: false, showAssignedUserFilter: true, showTagFilter: true })

  div.ui.basic.segment
    div.ui.grid
      div.four.wide.column(ng-repeat='state in states')
        span.ui.black.empty.circular.label(style='margin-left: 10px; margin-right: 5px; background-color: {{ state.color }} !important')
        span.ui.header {{ state.title }}
        div.ui.divider
        div.ui.card(ng-repeat='item in items | title: searchFilter | assignedUser: assignedUserFilter | tag: tagFilter | state: state')
          +itemCard(item, false)
        form(ng-submit='addSubItem(newSubItem.title, state); newSubItem.title = null;')
          div.ui.left.icon.input
            input(type='text' id='title' placeholder='Add new item...' style='width: 290px' ng-model='newSubItem.title')
            i.add.icon
