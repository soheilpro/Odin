include menu

div
  div.ui.segment
    +menu('Users')

  div.ui.basic.segment
    div.ui.ten.cards
      a.ui.card(ng-repeat='user in users' href='#/users/{{ user.id }}')
        div.image
          img(ng-src='/api/users/{{ user.id }}/avatar')
        div.content
          div.header {{ user.name }}
          div.description(ng-if='user.description') {{ user.description }}
